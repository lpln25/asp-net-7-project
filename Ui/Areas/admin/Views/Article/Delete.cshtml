@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@{
    ViewData["Title"] = "حذف مقاله";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Entities.Article


<div class="row">
    <partial name="_adminpanel" />

    <div class="col-md-9 div-cart">
        <div class="div-cart-header">
            <h5>
                از حذف مقاله فوق مطمئن هستی؟
            </h5>
        </div>
        <div>
            <hr />
            <dl class="row">
                <dt class="col-md-2">
                    @Html.DisplayNameFor(model => model.Title)
                </dt>
                <dd class="col-md-10">
                    @Html.DisplayFor(model => model.Title)
                </dd>
            </dl>
            <dl class="row">
                <dt class="col-md-2">
                    @Html.DisplayNameFor(model => model.DateTimeCreated)
                </dt>
                <dd class="col-md-10">
                    @Html.DisplayFor(model => model.DateTimeCreated)
                </dd>
            </dl>

            <form asp-action="Delete" asp-controller="Article" asp-area="admin">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="حذف مقاله" class="btn btn-danger" /> |
                <a asp-action="Index" asp-controller="Category" asp-area="admin">بازگشت به لیست</a>
            </form>
        </div>

    </div>

</div>