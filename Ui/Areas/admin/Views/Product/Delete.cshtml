@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers

@model Ui.Areas.admin.Models.ProductViewModel

@{
    ViewData["Title"] = "حذف کالا";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <partial name="_adminpanel" />

    <div class="col-md-9 div-cart">


        <div>


            <div class="col-md-12 div-cart">
                <div class="div-cart-header">
                    <h5>
                        از حذف محصول مطمئن هستی؟
                    </h5>
                </div>
                <div class="row shadow-sm" style="margin-bottom:12px;">
                    <div class="col-md-2">
                        <img src="~/img/Product/normalimage/@Model.product.ImageName"
                             class="img-fluid rounded"
                             alt="@Model.product.Name تصویر" />
                    </div>
                    <div class="col-md-10">
                        <div>
                            <h5>@Model.product.Name <span class="badge badge-info">@Model.product.category.Name</span> <abbr title="@Html.DisplayNameFor(model => model.product.Description)" class="initialism badge badge-warning">@Model.product.Price</abbr></h5>
                        </div>
                        <div>
                            <p>
                                @Model.product.Description
                            </p>
                        </div>
                    </div>
                </div>

                @* -------------Feature------------- *@
                <div>
                    <table class="table">
                        <thead class="thead-light">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.feature.Title)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.feature.Value)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Features)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Title)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Value)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                @* -------------Feature------------- *@
            </div>

